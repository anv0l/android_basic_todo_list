    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/chk_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is an item placeholder or whatever I want it to be there"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/chk_item"
        app:layout_constraintBottom_toBottomOf="@id/chk_item"
        app:layout_constraintLeft_toRightOf="@id/chk_item"
        app:layout_constraintRight_toRightOf="parent" />


